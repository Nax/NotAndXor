<!doctype html>
<html lang="en-US">
  <head>
    {{#if title}}
      <title>{{title}} &mdash; Not And Xor</title>
    {{/if}}
    {{#unless title}}
      <title>Not And Xor</title>
    {{/unless}}
    {{#if canonicalUrl}}
      <link rel="canonical" href="{{canonicalUrl}}"/>
    {{/if}}
    {{#each javascript.scripts}}
      <script nomodule defer="defer" src="{{this}}"></script>
    {{/each}}
    {{#each javascript.modules}}
      <script type="module" defer="defer" src="{{this}}"></script>
    {{/each}}
    {{#each scriptsInline}}
      <script>{{{this}}}</script>
    {{/each}}
    {{#each stylesheets}}
      <link type="text/css" rel="stylesheet" href="{{this}}"/>
    {{/each}}
    {{#if favicon}}
      {{{ favicon }}}
    {{/if}}
  </head>
  <body>
    <header class="header">
      <h1><a href="/">Not And Xor</a></h1>
    </header>
    <main class="content">
      {{> @partial-block }}
    </main>
    <footer class="footer">
      <div class="social">
        <a href="https://www.linkedin.com/in/mbacoux/"><img src="{{asset 'social/linkedin.svg'}}"/></a>
        <a href="https://github.com/Nax"><img src="{{asset 'social/github.svg'}}"/></a>
        <a href="https://twitter.com/nax_dev"><img src="{{asset 'social/twitter.svg'}}"/></a>
      </div>
      <div class="copyright">
        &copy; 2013-2022 Maxime Bacoux. Some rights reserved.
      </div>
    </footer>
    {{#each ld}}
      <script type="application/ld+json">{{{this}}}</script>
    {{/each}}
  </body>
</html>
